#!/bin/bash
# pre-commit hook - Scan for secrets before committing
#
# Install with: make install-hooks
# Or manually:  git config core.hooksPath .githooks

set -euo pipefail

# Colors
RED='\033[0;31m'
YELLOW='\033[1;33m'
GREEN='\033[0;32m'
NC='\033[0m'

echo "ğŸ” Scanning for secrets..."

# Patterns to detect (case-insensitive where appropriate)
PATTERNS=(
    # Anthropic API keys
    'sk-ant-api[0-9]{2}-[A-Za-z0-9_-]+'
    # Claude OAuth tokens (same format as API keys)
    'CLAUDE_CODE_OAUTH_TOKEN\s*=\s*sk-ant-'
    'ANTHROPIC_API_KEY\s*=\s*sk-ant-'
    # Docker Personal Access Tokens
    'dckr_pat_[A-Za-z0-9_-]+'
    # Generic secret patterns with actual values
    'api[_-]?key\s*=\s*["\047][^"\047]{20,}["\047]'
    'token\s*=\s*["\047]sk-[^"\047]+["\047]'
)

FOUND_SECRETS=false
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACMR 2>/dev/null || true)

if [[ -z "$STAGED_FILES" ]]; then
    echo -e "${GREEN}âœ“${NC} No staged files to check"
    exit 0
fi

# Check each pattern
for pattern in "${PATTERNS[@]}"; do
    # Search staged content (not just filenames)
    MATCHES=$(git diff --cached -U0 2>/dev/null | grep -E "$pattern" 2>/dev/null || true)
    
    if [[ -n "$MATCHES" ]]; then
        FOUND_SECRETS=true
        echo ""
        echo -e "${RED}â›” POTENTIAL SECRET DETECTED!${NC}"
        echo -e "${YELLOW}Pattern:${NC} $pattern"
        echo -e "${YELLOW}Matches:${NC}"
        echo "$MATCHES" | head -5 | sed 's/^/    /'
        echo ""
    fi
done

# Also check for literal .env file being committed
if echo "$STAGED_FILES" | grep -q "^\.env$"; then
    FOUND_SECRETS=true
    echo ""
    echo -e "${RED}â›” ATTEMPTING TO COMMIT .env FILE!${NC}"
    echo "The .env file contains secrets and should never be committed."
    echo ""
    echo "To unstage: git reset HEAD .env"
    echo ""
fi

# Check for any file containing what looks like a real API key
for file in $STAGED_FILES; do
    if [[ -f "$file" ]]; then
        # Look for sk-ant- followed by enough characters to be a real key
        if git show ":$file" 2>/dev/null | grep -qE 'sk-ant-[A-Za-z0-9_-]{30,}'; then
            # Exclude .env.example which has placeholder text
            if [[ "$file" != ".env.example" ]]; then
                FOUND_SECRETS=true
                echo ""
                echo -e "${RED}â›” POTENTIAL API KEY IN: $file${NC}"
                echo "Found what appears to be a real Anthropic API key."
                echo ""
            fi
        fi
    fi
done

if [[ "$FOUND_SECRETS" == "true" ]]; then
    echo -e "${RED}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
    echo -e "${RED}COMMIT BLOCKED - Potential secrets detected!${NC}"
    echo -e "${RED}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
    echo ""
    echo "If this is a false positive, you can bypass with:"
    echo "  git commit --no-verify"
    echo ""
    echo "But please double-check that you're not committing real secrets!"
    exit 1
fi

echo -e "${GREEN}âœ“${NC} No secrets detected"
exit 0

